@model RamMyERP3.Models.Collaborateur

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Collaborateur</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NOM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NOM)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PRENOM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PRENOM)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DATENAISSANCE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DATENAISSANCE)
        </dd>
    </dl>
</div>
<div class="card">
    <div class="card-body">
        <table id="dataTable" class="table table-striped table-bordered nowrap">
            <thead>
                <tr>
                    <th>
                        Action
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.NOM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PRENOM)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.LISTERAM.FirstOrDefault().MOIS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LISTERAM.FirstOrDefault().ANNEE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LISTERAM.FirstOrDefault().SIGNATURE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LISTERAM.FirstOrDefault().DATE_SIGNATURE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LISTERAM.FirstOrDefault().JOURS_TRAVAILLES)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LISTERAM.FirstOrDefault().JOURS_ABSENCE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LISTERAM.FirstOrDefault().COMMENTAIRE)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LISTERAM)
                {
                    @*href="~/Rams/Delete?id=@item.ID"*@
                    //data - toggle = "modal"
                    //                   data - target = "#default-Modal"
                    <tr>
                        <td style="white-space: nowrap; width: 1%; padding: 5px 12px 5px 12px">

                            <div class="tabledit-toolbar btn-toolbar" style="text-align: left;">
                                <div class="btn-group btn-group-sm" style="float: none;">
                                    <a type="button"
                                       class="tabledit-delete-button btn btn-outline-info waves-effect waves-light"
                                       style="float: none;margin: 5px;"
                                       href="~/Rams/Details?id=@item.ID">
                                        <span class="icofont icofont-list"></span>
                                    </a>

                                    <a type="button"
                                       class="tabledit-edit-button btn btn-primary waves-effect waves-light"
                                       style="float: none;margin: 5px;"
                                       href="~/Rams/Edit?id=@item.ID">
                                        <span class="icofont icofont-ui-edit"></span>
                                    </a>

                                    <a type="button"
                                       href="~/Rams/Delete?id=@item.ID"
                                       class="tabledit-delete-button btn btn-danger waves-effect waves-light"
                                       style="float: none;margin: 5px;">
                                        <span class="icofont icofont-ui-delete"></span>
                                    </a>

                                </div>
                            </div>
                        </td>


                        @*<td>    @Html.DisplayFor(modelItem => item.collaborateur.NOM)</td>
                            <td>    @Html.DisplayFor(modelItem => item.collaborateur.PRENOM)</td>*@
                        <td>    @Html.DisplayFor(modelItem => item.MOIS)</td>
                        <td>    @Html.DisplayFor(modelItem => item.ANNEE)</td>
                        <td>    @Html.DisplayFor(modelItem => item.SIGNATURE)</td>
                        <td>    @Html.DisplayFor(modelItem => item.DATE_SIGNATURE)</td>
                        <td>    @Html.DisplayFor(modelItem => item.JOURS_ABSENCE)</td>
                        <td>    @Html.DisplayFor(modelItem => item.JOURS_TRAVAILLES)</td>
                        <td>    @Html.DisplayFor(modelItem => item.COMMENTAIRE)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@section Styles {
    <!-- Data Table Css -->
    <link rel="stylesheet" type="text/css" href="~/files/bower_components/datatables.net-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/files/assets/pages/data-table/css/buttons.dataTables.min.css">

@model RamMyERP3.Models.Ram

@{
    ViewData["Title"] = "Informations RAM";
    var mode = ViewData["mode"];
    string anneeMois = Model.ANNEE.ToString() + '-' + Model.MOIS.ToString().PadLeft(2, '0');
    var total = Model.JOURS_ABSENCE + Model.JOURS_TRAVAILLES;
    //var _imagePath = "~/Images/" + Model.SIGNATURE;
}
<input class="mode" hidden asp-for="@mode" />
<div class="card syntheseContainer">
    <div class="card-header">
        <div class="card-header-left">
            <h4 id="Header" class="card-subtitle mb-2 text-muted">@ViewData["Title"] </h4>
        </div>
        <div class="card-header-right">
            <i id="minimizeSynthese" class="feather icon-minus"> </i>
        </div>
    </div>
    @*<input id="mode" hidden asp-for="@mode" />*@
    @*affichage des informations générales sur le ram*@

    <div class="card-body">
        <input Id="ID" type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="CollaborateurId" />
        <div>

            <div class="row">

                <div class="col-md-6" style="vertical-align: central">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <label asp-for="@Model.collaborateur.NOM" class="control-label"></label>
                        </div>
                        <div class="col-md-6">
                            <div class="col-sm-10">
                                <input asp-for="@Model.collaborateur.NOM" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                            <label asp-for="JOURS_TRAVAILLES" class="control-label"></label>
                        </div>
                        <div class="col-md-6">
                            <div class="col-sm-10">
                                <input id="JOURS_TRAVAILLES" asp-for="JOURS_TRAVAILLES" class="form-control" disabled style="text-align: right" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group required  row">
                        <div class="col-md-6 ">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <label asp-for="ANNEEMOIS" class="control-label">Mois/Année</label>
                        </div>
                        <div class="col-md-6">
                            <div class="col-sm-10">
                                <input id="AnneeMois" asp-for="@anneeMois" type="month" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <i class="fa fa-calendar-o" aria-hidden="true"></i>
                            <label asp-for="DATE_SIGNATURE" class="control-label"></label>
                        </div>
                        <div class="col-md-6">
                            <div class="col-sm-10">
                                <input id="DATE_SIGNATURE" asp-for="DATE_SIGNATURE" type="date" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <div class="col-md-6">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <label asp-for="collaborateur.PRENOM" class="control-label"></label>
                        </div>
                        <div class="col-md-6">
                            <div class="col-sm-10">
                                <input asp-for="collaborateur.PRENOM" class="form-control" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <i class="fa fa-calendar-times-o" aria-hidden="true"></i>
                            <label asp-for="JOURS_ABSENCE" class="control-label"></label>
                        </div>
                        <div class="col-md-6">
                            <div class="col-sm-10">
                                <input id="JOURS_ABSENCE" asp-for="JOURS_ABSENCE" class="form-control" disabled style="text-align: right" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <i class="fa fa-calculator" aria-hidden="true"></i>
                            <label for="Total" class="control-label">Total</label>
                        </div>
                        <div class="col-md-6">
                            <div class="col-sm-10">
                                <input id="total" asp-for="@total" class="form-control" disabled style="text-align: right" />
                            </div>
                        </div>
                    </div>
                    @if (Model.SIGNATURE != null)
                    {
                        <div class="form-group row" id="signature">
                            <div class="col-md-6">

                                <label asp-for="SIGNATURE" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <div class="col-sm-10">
                                    @*<canvas id="canvas"></canvas>*@
                                    @*<input id="SIGNATURE" asp-for="SIGNATURE" class="form-control" />*@

                                    <img asp-for="SIGNATURE" src="~/Images/@Model.SIGNATURE" style="width : 250px; border: 1px solid #555; " />
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .form-group.required .control-label:after {
        content: "*";
        color: red;
    }

    #canvas {
        width: 250px;
        height: 150px;
        border: 1px solid #000
    }

    #capture {
        border: 1px solid black;
        width: 200px;
        height: 150px;
    }

    /* MISE EN PAGE*/
    .mise-en-page {
    }

    .bloc-mise-en-page {
        margin: 10px;
        flex: 1 0 0px;
        min-width: 500px;
    }
</style>
